<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence                http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
  <persistence-unit name="hello" transaction-type="RESOURCE_LOCAL">
    <provider>org.apache.openjpa.persistence.PersistenceProviderImpl</provider>
    <class>org.pawelwaz.helloworkz.entity.HelloUser</class>
    <class>org.pawelwaz.helloworkz.entity.Message</class>
    <class>org.pawelwaz.helloworkz.entity.Contact</class>
    <class>org.pawelwaz.helloworkz.entity.Group</class>
    <properties>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://127.0.0.1:3306/hello?useUnicode=yes&amp;characterEncoding=UTF-8"/>
      <property name="javax.persistence.jdbc.user" value="hello"/>
      <property name="javax.persistence.jdbc.password" value="hello"/>
    </properties>
  </persistence-unit>
</persistence>
