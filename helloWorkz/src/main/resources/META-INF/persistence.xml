<persistence xmlns="http://java.sun.com/xml/ns/persistence"       
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"       
        xsi:schemaLocation="http://java.sun.com/xml/ns/persistence       
        http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"       
        version="1.0">  
    
    <persistence-unit name="hello" transaction-type="RESOURCE_LOCAL">
        <provider>org.apache.openjpa.persistence.PersistenceProviderImpl</provider>
        
        <class>org.pawelwaz.helloworkz.entity.HelloUser</class>

        <properties>
               
            <property name="javax.persistence.jdbc.driver"       
                      value="com.mysql.jdbc.Driver"/>       
            <property name="javax.persistence.jdbc.url"       
                      value="jdbc:mysql://127.0.0.1:3306/hello?useUnicode=yes&amp;characterEncoding=UTF-8"/>       
            <property name="javax.persistence.jdbc.user" value="hello"/>       
            <property name="javax.persistence.jdbc.password" value="hello"/>   
        </properties>
        
    </persistence-unit>
    
</persistence>